<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
 <servlet>
  <servlet-name>Servlet1</servlet-name>
  <servlet-class>Servlet1</servlet-class>
</servlet>

 <servlet>
  <servlet-name>ServletClient</servlet-name>
  <servlet-class>ServletClient</servlet-class>
</servlet>

 <servlet>
  <servlet-name>ServletRoot</servlet-name>
  <servlet-class>ServletRoot</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>Servlet1</servlet-name>
  <url-pattern>/Servlet1</url-pattern>
</servlet-mapping>

<servlet-mapping>
  <servlet-name>ServletClient</servlet-name>
  <url-pattern>/ServletClient</url-pattern>
</servlet-mapping>

<servlet-mapping>
  <servlet-name>ServletRoot</servlet-name>
  <url-pattern>/ServletRoot</url-pattern>
</servlet-mapping>

</web-app>